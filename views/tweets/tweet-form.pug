extends ../layout.pug

block content
    div(class="d-flex flex-row content mx-auto")
        div(class="profile-container") profile
            //- include ../includes/profile.pug
        div(class="flex-fill")
            form(class="card" method='post' action= tweet._id ? "/tweets/update/" + tweet._id : "/tweets")
                div(class="card-header") Ecrire un tweet
                div(class='card-body')
                    div(class='form-groupe')
                        textarea(class='form-control' name="content" placeholder="What's up ?")= tweet.content
                    if errors
                        ul(class='my-2')
                            each error in errors
                                li(class="text-danger") = error
                    div(class="w-100")
                        input(type="submit" value="Send" class="btn btn-primary ml-auto d-block")
    